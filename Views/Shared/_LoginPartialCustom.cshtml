@using Microsoft.AspNetCore.Identity

@inject SignInManager<IndentityManager.Models.ApplicationUser> SignInManager
@inject SignInManager<IndentityManager.Models.ApplicationUser> UserManager



<ul class="navbar-nav">

    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link" href="#">Hello  @User.Identity!.Name!</a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" method="post" class="form-inline" asp-controller="Account" asp-action="LogOff">
                <button type="submit" class="btn nav-link"> Logout </button>
            </form>
        </li>
    }
    else{
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
        </li>
    }
</ul>